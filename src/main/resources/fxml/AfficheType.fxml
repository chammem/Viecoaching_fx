<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AffichertypeController">
    <VBox alignment="CENTER" layoutY="1.0" prefHeight="706.0" prefWidth="998.0" spacing="10" style="-fx-background-color: #F7F4D9;">
        <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Liste Type de Groupe" textAlignment="CENTER" textFill="#ac8c8c">

            <font>
                <Font name="Arial Rounded MT Bold" size="25.0" />
            </font></Label>
        <HBox alignment="CENTER" prefHeight="130.0" prefWidth="943.0" spacing="200">

            <PieChart fx:id="pieChart" prefHeight="300.0" prefWidth="500.0" />
        </HBox>

        <ScrollPane fitToHeight="true" fitToWidth="true">

            <content>
                <!-- GridPane pour afficher les ressources -->
                <GridPane fx:id="gridPane" hgap="10" prefHeight="314.0" prefWidth="930.0" vgap="10">
                </GridPane>
            </content>

        </ScrollPane>

        <Button fx:id="ajouterButton" alignment="BOTTOM_CENTER" nodeOrientation="RIGHT_TO_LEFT" onAction="#handleAjouter" text="Ajouter" textAlignment="CENTER" textFill="#77d13f">
            <!-- Ajouter des boutons de pagination -->

            <font>
                <Font size="25.0" />
            </font></Button>
        <Button mnemonicParsing="false" onAction="#previousPage" text="&lt;&lt;" />
        <Button mnemonicParsing="false" onAction="#nextPage" text="&gt;&gt;" />

    </VBox>



</AnchorPane>
