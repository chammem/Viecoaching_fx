<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.TypegController"
            prefHeight="400.0" prefWidth="600.0" stylesheets="@styles.css" >
    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>
    <GridPane hgap="10" layoutX="50" layoutY="50" vgap="10">

        <!-- Labels pour les titres -->
        <Label text="Type De Groupe :" />


        <!-- Champs de saisie pour les informations du groupe -->
        <TextField fx:id="nomField" GridPane.columnIndex="1" />



        <!-- Boutons pour les actions -->
        <HBox spacing="10" GridPane.columnSpan="2" GridPane.rowIndex="6">
            <Button onAction="#ajouter" text="Ajouter" />

        </HBox>

        <!-- Contraintes de colonnes -->
        <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
            <ColumnConstraints />
        </columnConstraints>

        <!-- Contraintes de lignes -->
        <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
        </rowConstraints>

    </GridPane>



</AnchorPane>
