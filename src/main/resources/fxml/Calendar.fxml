<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="642.0" prefWidth="744.0" style="-fx-background-color: #f2fafc;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.asma.asma.controllers.CalendarController">

    <!-- Calendar Display -->
    <FlowPane fx:id="calendar" hgap="10.0" layoutX="14.0" layoutY="116.0" prefHeight="498.0" prefWidth="716.0" style="-fx-background-color: #ffffff; -fx-padding: 20;" vgap="5.0" />

    <!-- Navigation Controls -->
    <HBox alignment="CENTER" layoutX="163.0" layoutY="14.0" prefHeight="44.0" prefWidth="419.0" spacing="20.0" style="-fx-background-color: #e0e0e0; -fx-padding: 10;">
        <children>
            <Button mnemonicParsing="false" onAction="#backOneMonth" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 16pt;" text="&lt;" />
            <Text fx:id="year" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-size: 18pt;" text="####" />
            <Text fx:id="month" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-size: 18pt;" text="####" />
            <Button mnemonicParsing="false" onAction="#forwardOneMonth" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 16pt;" text="&gt;" />
        </children>
    </HBox>

    <!-- Days of the Week Labels -->
    <HBox alignment="CENTER" layoutX="14.0" layoutY="78.0" prefHeight="44.0" prefWidth="716.0" spacing="10.0" style="-fx-background-color: #e0e0e0; -fx-padding: 5;">
        <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-size: 14pt;" text="Su" textAlignment="CENTER" />
            <Text strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-size: 14pt;" text="Mo" textAlignment="CENTER" />
            <Text strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-size: 14pt;" text="Tu" textAlignment="CENTER" />
            <Text strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-size: 14pt;" text="We" textAlignment="CENTER" />
            <Text strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-size: 14pt;" text="Th" textAlignment="CENTER" />
            <Text strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-size: 14pt;" text="Fr" textAlignment="CENTER" />
            <Text strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-size: 14pt;" text="Sa" textAlignment="CENTER" />
        </children>


        <padding>
            <Insets right="9.0" />
        </padding>
    </HBox>

    <!-- Popup Content -->
    <VBox fx:id="popupContent" alignment="CENTER" layoutX="50.0" layoutY="50.0" prefHeight="200.0" prefWidth="300.0" spacing="10.0">
        <ColorPicker fx:id="colorPicker" />


    </VBox>

</AnchorPane>