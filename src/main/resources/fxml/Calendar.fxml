<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.control.Label?>
<AnchorPane prefHeight="642.0" prefWidth="744.0" style="-fx-background-color: #f2fafc;" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.CalendarController">

    <!-- Calendar Display -->
    <FlowPane fx:id="calendar" hgap="10.0" layoutX="14.0" layoutY="116.0" prefHeight="498.0" prefWidth="716.0" vgap="5.0" style="-fx-background-color: #ffffff; -fx-padding: 20;"/>

    <!-- Navigation Controls -->
    <HBox alignment="CENTER" layoutX="163.0" layoutY="14.0" prefHeight="44.0" prefWidth="419.0" spacing="20.0" style="-fx-background-color: #e0e0e0; -fx-padding: 10;">
        <children>
            <Button mnemonicParsing="false" onAction="#backOneMonth" text="&lt;" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 16pt;"/>
            <Text fx:id="year" strokeType="OUTSIDE" strokeWidth="0.0" text="####" style="-fx-font-size: 18pt;"/>
            <Text fx:id="month" strokeType="OUTSIDE" strokeWidth="0.0" text="####" style="-fx-font-size: 18pt;"/>
            <Button mnemonicParsing="false" onAction="#forwardOneMonth" text="&gt;" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 16pt;"/>
        </children>
    </HBox>

    <!-- Days of the Week Labels -->
    <HBox alignment="CENTER" layoutX="14.0" layoutY="78.0" prefHeight="44.0" prefWidth="716.0" spacing="10.0" style="-fx-background-color: #e0e0e0; -fx-padding: 5;">
        <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Su" textAlignment="CENTER" style="-fx-font-size: 14pt;"/>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Mo" textAlignment="CENTER" style="-fx-font-size: 14pt;"/>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Tu" textAlignment="CENTER" style="-fx-font-size: 14pt;"/>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="We" textAlignment="CENTER" style="-fx-font-size: 14pt;"/>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Th" textAlignment="CENTER" style="-fx-font-size: 14pt;"/>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Fr" textAlignment="CENTER" style="-fx-font-size: 14pt;"/>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Sa" textAlignment="CENTER" style="-fx-font-size: 14pt;"/>
        </children>


        <padding>
            <Insets right="9.0" />
        </padding>
    </HBox>

    <!-- Popup Content -->
    <VBox fx:id="popupContent" alignment="CENTER" layoutX="50.0" layoutY="50.0" prefHeight="200.0" prefWidth="300.0" spacing="10.0">
        <Label fx:id="colorLabel" text="Color:" />
        <ColorPicker fx:id="colorPicker" />


    </VBox>

</AnchorPane>
