            <Text strokeType="OUTSIDE" strokeWidth="0.0" />
            <Button fx:id="NavBarCat" mnemonicParsing="false" prefHeight="44.0" prefWidth="262.0" style="-fx-background-color: #BED6B1;" text="Categorie" />
        </children>
