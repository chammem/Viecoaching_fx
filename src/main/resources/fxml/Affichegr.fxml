<AnchorPane prefHeight="665.0" prefWidth="1675.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AffichergrController">
    <VBox alignment="CENTER" layoutX="266.0" layoutY="1.0" prefHeight="664.0" prefWidth="1398.0" spacing="10">
