<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="665.0" prefWidth="1127.0" style="-fx-background-color: #F7F4D9;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AffichergrController">
    <VBox alignment="CENTER" layoutX="2.0" layoutY="119.0" prefHeight="546.0" prefWidth="1127.0" spacing="10">

        <!-- Zone de recherche -->
        <HBox alignment="CENTER" prefHeight="150.0" prefWidth="1121.0" spacing="200">
            <PieChart fx:id="pieChart" prefHeight="300.0" prefWidth="500.0" />
        </HBox>
        <!-- ScrollPane pour afficher les ressources -->
        <ScrollPane fitToHeight="true" fitToWidth="true" prefHeight="278.0" prefWidth="931.0">

            <content>
                <!-- GridPane pour afficher les ressources -->
                <GridPane fx:id="gridPane" hgap="10" prefHeight="227.0" prefWidth="934.0" vgap="10">
                </GridPane>

            </content>
        </ScrollPane>
        <Button fx:id="ajouterButton" alignment="BOTTOM_CENTER" nodeOrientation="RIGHT_TO_LEFT" onAction="#handleAjouter" text="Ajouter" textAlignment="CENTER" textFill="#77d13f" />
        <Button mnemonicParsing="false" onAction="#previousPage" text="&lt;&lt;" />
        <Button mnemonicParsing="false" onAction="#nextPage" text="&gt;&gt;" />

    </VBox>
    <Label layoutX="481.0" layoutY="31.0" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Liste des groupes" textFill="#794545" />

    <TextField fx:id="searchField" layoutX="21.0" layoutY="16.0" onKeyTyped="#searchAction" promptText="Rechercher..." style="-fx-background-color: #BED6B1;" />

</AnchorPane>
