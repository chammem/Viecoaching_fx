            <TextField fx:id="searchField" onKeyTyped="#searchAction" promptText="Rechercher..." />
        <!-- Zone de recherche -->
        <HBox alignment="CENTER" prefHeight="130.0" prefWidth="943.0" spacing="200">
            <PieChart fx:id="pieChart" prefHeight="300.0" prefWidth="500.0" />
        </HBox>
        <!-- ScrollPane pour afficher les ressources -->
        <ScrollPane fitToHeight="true" fitToWidth="true" prefHeight="466.0" prefWidth="1354.0">

            <content>
                <!-- GridPane pour afficher les ressources -->
                <GridPane fx:id="gridPane" hgap="10" prefHeight="416.0" prefWidth="1390.0" vgap="10">
                </GridPane>

            </content>
        </ScrollPane>
        <Button fx:id="ajouterButton" alignment="BOTTOM_CENTER" nodeOrientation="RIGHT_TO_LEFT" onAction="#handleAjouter" text="Ajouter" textAlignment="CENTER" textFill="#77d13f" />

