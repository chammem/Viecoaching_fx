        <children>
            <HBox prefHeight="100.0" prefWidth="200.0">
                <children>
                    <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@../image/426197672_379463364719872_8698905274837661634_n.png" />
                        </image>
                    </ImageView>
                </children>
            </HBox>

            <Button mnemonicParsing="false" prefHeight="44.0" prefWidth="262.0" style="-fx-background-color: #BED6B1;" text="Statistiques" />
            <Text strokeType="OUTSIDE" strokeWidth="0.0" wrappingWidth="1.0" />
