            <Text strokeType="OUTSIDE" strokeWidth="0.0" />
            <Button mnemonicParsing="false" onAction="#NavBarRes" prefHeight="42.0" prefWidth="262.0" style="-fx-background-color: #BED6B1;" text="Type Groupes" />
            <Text strokeType="OUTSIDE" strokeWidth="0.0" />
