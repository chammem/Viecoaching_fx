<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.LoginController">
   <left>
      <AnchorPane maxHeight="380.0" maxWidth="280.0" minHeight="380.0" minWidth="280.0" prefHeight="380.0" prefWidth="280.0" BorderPane.alignment="CENTER">

         <ImageView fx:id="image1View" fitHeight="380.0" fitWidth="295.0" pickOnBounds="true" preserveRatio="true">
            <Image url="@../../../../images/image1.PNG" />
         </ImageView>

      </AnchorPane>
   </left>
   <center>
      <AnchorPane maxHeight="380.0" maxWidth="328.0" minHeight="380.0" minWidth="280.0" prefHeight="380.0" prefWidth="328.0" style="-fx-background-color: #ffffff;" BorderPane.alignment="CENTER">

         <Label layoutX="94.0" layoutY="42.0" text="Connexion">
            <font>
               <Font name="Arial Rounded MT Bold" size="29.0" />
            </font>
         </Label>
         <HBox layoutX="44.0" layoutY="104.0" prefHeight="30.0" prefWidth="250.0">

            <ImageView fx:id="userView" fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
               <Image url="@../../../../images/image3.png" />
            </ImageView>
            <TextField fx:id="emailTextField" prefHeight="30.0" prefWidth="230.0" promptText="Adresse email " />

         </HBox>
         <HBox layoutX="44.0" layoutY="160.0" prefHeight="30.0" prefWidth="250.0">

            <ImageView fx:id="lockView" fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
               <Image url="@../../../../images/image2.png" />
            </ImageView>
            <PasswordField fx:id="enterPasswordField" prefHeight="30.0" prefWidth="230.0" promptText="Mot de passe" />

         </HBox>
         <Button fx:id="loginButton" layoutX="61.0" layoutY="287.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="100.0" style="-fx-background-color: #17a2b8; -fx-border-radius: 20px;" text="Se connecter" textFill="WHITE">
            <font>
               <Font size="14.0" />
            </font>
         </Button>
         <Hyperlink layoutX="108.0" layoutY="321.0" onAction="#GoToReset" text="Mot de passe oublié?" />
         <Button fx:id="registreButton" layoutX="79.0" layoutY="344.0" mnemonicParsing="false" prefWidth="180.0" style="-fx-background-color: #c3c78c; -fx-border-radius: 30px;" text="Créer nouveau compte" textFill="WHITE">
            <font>
               <Font size="14.0" />
            </font>
         </Button>
         <TextField fx:id="captchaTextField" layoutX="164.0" layoutY="206.0" prefHeight="41.0" prefWidth="138.0" />
         <Button fx:id="refreshButton" layoutX="183.0" layoutY="287.0" mnemonicParsing="false" onAction="#refreshCaptchaButton" prefHeight="30.0" prefWidth="100.0" style="-fx-background-color: orange; -fx-border-radius: 20px;" text="Refresh" textFill="WHITE">
            <font>
               <Font name="System Bold" size="14.0" />
            </font>
         </Button>
         <Text fx:id="errorcaptcha" fill="#d70c0c" layoutX="62.0" layoutY="270.0" strokeType="OUTSIDE" strokeWidth="0.0" wrappingWidth="242.21630859375" />
         <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#fff0f6" height="46.0" layoutX="10.0" layoutY="204.0" stroke="TRANSPARENT" strokeType="INSIDE" width="149.0" />
         <Text fx:id="captchaIrenderView" fontSmoothingType="LCD" layoutX="23.0" layoutY="238.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Text" textAlignment="CENTER" wrappingWidth="123.21630859375">
            <font>
               <Font name="Arial Italic" size="25.0" />
            </font>
         </Text>

      </AnchorPane>
   </center>
</BorderPane>
