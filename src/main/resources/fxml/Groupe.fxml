<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.groupeController" prefHeight="400.0" prefWidth="600.0" stylesheets="@styles.css">

    <!-- GridPane pour organiser les composants -->
    <GridPane hgap="10" vgap="10" layoutX="50" layoutY="50" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0">

        <!-- Labels pour les titres -->
        <Label text="Nom :" />
        <Label text="Type de groupe :" GridPane.rowIndex="1" />
        <Label text="Date de création :" GridPane.rowIndex="2" />
        <Label text="Image :" GridPane.rowIndex="3" />
        <Label text="Description :" GridPane.rowIndex="4" />
        <Label text="Utilisateurs :" GridPane.rowIndex="6" />

        <!-- Champs de saisie pour les informations du groupe -->
        <TextField fx:id="nomField" GridPane.columnIndex="1" />
        <ChoiceBox fx:id="typeGroupeField" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <DatePicker fx:id="dateCreationField" promptText="Sélectionner une date" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <ImageView fx:id="imageView" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="1" GridPane.rowIndex="3" />
        <TextField fx:id="descriptionField" GridPane.columnIndex="1" GridPane.rowIndex="4" />

        <!-- Bouton pour insérer une image -->
        <Button onAction="#selectImage" text="Insérer une image" GridPane.columnIndex="2" GridPane.rowIndex="3" />

        <!-- ListView pour afficher les utilisateurs -->
        <ListView fx:id="utilisateursListView" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="6" />

        <!-- Boutons pour les actions -->
        <HBox spacing="10" GridPane.columnSpan="2" GridPane.rowIndex="7">
            <Button onAction="#ajouter" text="Ajouter" />
        </HBox>

    </GridPane>
</AnchorPane>
